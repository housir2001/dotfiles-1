" fzf ripgrep

if executable("rg")
    command! -bang -nargs=* Rg
              \ call fzf#vim#grep(
          \   'rg --column --line-number --no-heading --color=always --ignore-case <q-args>, 1,
          \   <bang>0 ? fzf#vim#with_preview('up:60%')
          \           : fzf#vim#with_preview('right:50%:hidden', '?'),
          \   <bang>0)

    nnoremap <C-p>a :Rg
endif

