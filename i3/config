#bindsym Mod4+y exec vlc 

#lock screen
bindsym Mod4+o exec /home/maren/.config/i3/script/lock2.sh

# gaps

gaps inner 5
gaps outer 0
smart_gaps on

#compton for window transperncy
exec_always --no-startup-id "killall -q compton; compton --config ~/.config/i3/compton.conf"

# Background image
exec_always feh --bg-scale --no-xinerama ~/Bilder/Background.png
# keyboard layout
exec_always setxkbmap -layout us,de

# monitors
bindsym Mod4+m exec autorandr --change

