mode "print" {

        bindsym f exec "maim /tmp/foo.png && xclip -selection clipboard -t image/png -i /tmp/foo.png"
        bindsym w exec "maim -i $(xdotool getactivewindow) /tmp/foo.png && xclip -selection clipboard -t image/png -i /tmp/foo.png"
        bindsym a exec "maim -s /tmp/foo.png && xclip -selection clipboard -t image/png -i /tmp/foo.png"
        bindsym Escape mode "default"
        bindsym Return mode "default"
        
}
bindsym Print mode "print"

mode "moveit" {
        bindsym Up move up 20px
        bindsym Left move left 20px
        bindsym Down move down 20px
        bindsym Right move right 20px
        bindsym Escape mode "default"
        bindsym Return mode "default"
}

bindsym Mod4+t focus floating mode "moveit"


for_window [class="Gimp"] floating enable
for_window [class="Spotify"] floating enable

